{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "classic",
        "outDir": "build/"
    },
    "include": ["source/**/*"],
    "exclude": [
        "node_modules"
    ]
}